# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Anvil Configuration
ANVIL_APP_ID=your_anvil_app_id_here
ANVIL_API_KEY=your_anvil_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/paddle_plugin
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=paddle_plugin
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password

# External Services
EXTERNAL_API_KEY=your_external_api_key_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Development Configuration
DEBUG=true
LOG_LEVEL=DEBUG

# Security
VAULT_ADDR=https://your-vault-server:8200
VAULT_TOKEN=your_vault_token_here

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_FILE_PATH=/var/log/paddle-plugin.log

# Anvil Secrets (if using custom vault system)
ANVIL_SECRETS_ENCRYPTION_KEY=your_encryption_key_here
ANVIL_SECRETS_DB_URL=postgresql://username:password@localhost:5432/anvil_secrets